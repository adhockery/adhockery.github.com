---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <article>
    <header>
      <h2><%= link_to article.title, article %></h2>
    </header>
    <%= article.summary %>
    <%= link_to 'Read moreâ€¦', article %>
    <footer>
      <time datetime="<%= article.date.strftime('%Y-%m-%dT%H:%M:%S') %>"><%= article.date.strftime('%b %e %Y') %></time>
    </footer>
  </article>
<% end %>

<% if paginate %>
  <nav class="pagination">
    <% if prev_page %>
      <%= link_to 'Previous page', prev_page %>
    <% end %>
    <span>Page <%= page_number %> of <%= num_pages %></span>
    <% if next_page %>
      <%= link_to 'Next page', next_page %>
    <% end %>
  </nav>
<% end %>
