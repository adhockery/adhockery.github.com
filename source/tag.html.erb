---
pageable: true
per_page: 10
---
<header>
  <h1>Articles tagged <em>‘<%= tagname %>’</em></h1>
</header>

<% page_articles.each_with_index do |article, i| %>
  <article>
    <header>
      <time datetime="<%= article.date.strftime('%Y-%m-%dT%H:%M:%S') %>"><%= article.date.strftime('%b %e %Y') %></time>
      <h2><%= link_to article.title, article %></h2>
    </header>
    <%= article.summary %>
    <%= link_to 'Read more…', article, class: 'read-more' %>
  </article>
  <hr>
<% end %>

<% if paginate %>
  <nav class="pagination">
    <% if prev_page %>
      <%= link_to 'Previous page', prev_page, rel: 'prev' %>
    <% else %>
      <a disabled>Previous page</a>
    <% end %>
    <span>Page <%= page_number %> of <%= num_pages %></span>
    <% if next_page %>
      <%= link_to 'Next page', next_page, rel: 'next' %>
    <% else %>
      <a disabled>Next page</a>
    <% end %>
  </nav>
<% end %>
