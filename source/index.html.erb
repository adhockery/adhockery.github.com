---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <article>
    <header>
      <time datetime="<%= article.date.strftime('%Y-%m-%dT%H:%M:%S') %>"><%= article.date.strftime('%b %e %Y') %></time>
      <h2><%= link_to article.title, article %></h2>
    </header>
    <%= article.summary %>
    <%= link_to 'Read moreâ€¦', article, class: 'read-more' %>
  </article>
  <hr>
<% end %>

<% if paginate %>
  <nav class="pagination">
    <% if prev_page %>
      <%= link_to 'Previous', prev_page, rel: 'prev' %>
    <% else %>
      <a rel="prev" disabled>Previous</a>
    <% end %>
    <span class="current"><%= page_number %> of <%= num_pages %></span>
    <% if next_page %>
      <%= link_to 'Next', next_page, rel: 'next' %>
    <% else %>
      <a rel="next" disabled>Next</a>
    <% end %>
  </nav>
<% end %>
