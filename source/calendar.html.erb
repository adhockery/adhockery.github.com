---
pageable: false
---
<section class="primary archive">
  <header>
    <h1>Archive for
      <% case page_type
         when 'day' %>
        <%= Date.new(year, month, day).strftime('%b %e %Y') %>
      <% when 'month' %>
        <%= Date.new(year, month, 1).strftime('%b %Y') %>
      <% when 'year' %>
        <%= year %>
      <% end %>
    </h1>
  </header>

  <ul>
    <% page_articles.each_with_index do |article, i| %>
      <li><%= link_to article.title, article %> <time datetime="<%= article.date.strftime('%Y-%m-%dT%H:%M:%S') %>"><%= article.date.strftime('%b %e') %></time></li>
    <% end %>
  </ul>

  <% if paginate && num_pages > 1 %>
    <nav class="pagination">
      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      <span>Page <%= page_number %> of <%= num_pages %></span>
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>
    </nav>
  <% end %>
</section>
